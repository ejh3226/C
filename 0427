switch문

예제
달을 입력하시오:3
3월의 일수는 31 입니다.

#include <stdio.h>

int main(void)
{

  int month, day;

  printf("달을 입력하시오:");
  scanf("%d", &month);
  
  switch (moth){
  case 2: day=29;
  break;
  
  case1:             /*
  case3:              이 부분을 default: day=31; break 로 쓰면 더 간결해짐
  case5:             */
  case7:
  case8:
  case10:
  case12:
  day=31;
  break;
  
  case4:
  case6:
  case9:
  case11:
    day = 30;
    break;
  }
  
  printf("%d월의 일수는 %d입니다.", month, day);
  return 0;
  }
  
산술 계산기
#imclude <stdio.h>
int main (void)
{
  int x, y, result;
  char z;
  
  printf("수식을 입력하시오(예: 2+5)>>");
  scanf("%d %c %d", &x,&z,&y);
  
  swich (z){
  
    case+:
      result= x + y;
      break;
    case-:
      result = x - y;
      break;
    case*:
      result = z * y;
      break
    case%:                          /* 연산자에 '' 해주기*/
      result = x % y;
      break;
    case/:
      result = x / y;
      break;
      
      default:
      print("지원하지 않는 형식자 입니다.");
      break;
      }
    
    printf("%d %z %d = %d", x, z, y, result);
    
    return 0;
    }
    
조건 연산자

max_value = (x > y) ? x : y;
참일때는 x, 거짓일때는 y


#include <stdio.h>
int main(void)
{

  int x,y;
  
  printf("정수 2개:");
  scanf("%d %d", &x, &y);
  
  printf("큰 수 = %d",(x>y) ? x : y);
  printf("작은 수 = %d", (x < y) ? x : y);
  
  return 0;
  }
  
  












